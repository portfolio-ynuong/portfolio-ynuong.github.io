/* CSS Document */
@import url('https://fonts.googleapis.com/css2?family=Dosis:wght@200&display=swap');
html{
	scroll-behavior: smooth;
}
body{
	color:#383838;
	font-family: 'Dosis', sans-serif;
	background:#FAFAFA;
}
.bg-f{
	background:#FFFFFF;
}
.khung{
	border: 1px solid rgba(var(--jb7,0,0,0),.0975);
}
.khung-r{
	border-right: 1px solid rgba(var(--jb7,0,0,0),.0975);}
.khung-t{
	border-top: 1px solid rgba(var(--jb7,0,0,0),.0975);}
.line-t{
	border-top:1px solid #383838;
}
.header{
	height:54px;
	width:100%;
	padding:0 120px;
	margin:0 auto;
	border-bottom: 1px solid rgba(var(--b6a,219,219,219),1);
	position:fixed;
	z-index: 10000;
	background:#FFFFFF;
}
.header-content{
	margin:0 auto;
	max-width:1340px;
	padding:0 20px;
	justify-content: center;
}
.icon a{
	color:#383838;
	font-size:24px;
	padding-left:24px;}
header{
	width:300px;
	height:100%;
	position:fixed;
	right:0px;
	padding:50px 55px;
	display:flex;
	flex-direction: column;
	justify-content: space-between;
	border-left:1px solid rgba(var(--b6a,219,219,219),1);
}
.infor-img{
	height:50px;
	border: 1px solid rgba(var(--jb7,0,0,0),.0975);
    border-radius: 50%;
}
.menu{
	display:flex;
	flex-direction: column;
	margin-top:50px;}
.menu a{
	color:#383838;
	text-decoration: none;
	padding:10px 0;
	text-transform: uppercase;
	font-size:20px;
}
.menu a:hover{
	text-decoration: underline;
}
.check-me{
	font-size:12px;
}
.check-me h2{
	padding-bottom: 10px;
}
.check-me a{
	text-decoration: none;
	color:#383838;
}
main{
	width:100%;
	padding-right:300px;
}
.social-icon a{
	color:#383838;
	font-size:22px;
}
section{
	height:100vh;
	background:#FFFFFF;
	padding:90px 150px;
}
#banner{
	background: url(../img/Kick-Push-a-funny-animated-GIF-by-Swedish-graphic-designer-and-illustrator-Markus-Magnusson.gif);
	height:100vh;
	width:100%;
	background-repeat: no-repeat;
	background-position: center;
	position:relative;
}
.hello{
	position:absolute;
	top:100px;
	left:120px;
}
#banner h1{
	font-size:34px;
	line-height: 150%;
	letter-spacing: 16px;

}
.img-banner img{
	height:300px;
}
/*thông tin*/
#about{
	background:#FAFAFA;
	height:1000px;

}
#about p{
	font-size:20px;}

.leading{
	line-height:150%;
	padding:65px 60px;
}
.img-about img{
	width:90%;

	}
.ve{
	padding:7px 18px;
	margin: 8px;
	border: 1px solid rgba(var(--jb7,0,0,0),.0975);
	border-radius:5px;
	align-items: center;
}
.ve:hover{
	filter:brightness(200%);
}
.thongtin{
	padding:60px 0;}
.leading-kn{
	line-height:200%;
	padding:0px 70px;
}
.kn-cot{
	text-align:center;
	line-height:200%;}
.kn-cot h1{
	margin-top:28px;
	font-size:35px;}

/*dự án*/
#services{
	background:#FAFAFA;
	height:1000px;
	margin-bottom: 100px;
}
#services h1{++
	font-size:35px;
}
.img-da{
	width:100%;
	overflow:hidden;}
.the-da{
	background:#FFFFFF;
	height:380px;
	border: 1px solid rgba(var(--jb7,0,0,0),.0975);}
.icon-more{
	color:#383838;
	font-size:20px;
}
.icon-more:hover{
	filter:brightness(200%);
}
.box{
	position:relative;
	overflow:hidden;
}	
.overplay{
	top:0;
	opacity:0;
	visibility:hidden;
}
.noidung-da{
	padding:20px;
	width:100%;
	height:100%;
	background:rgba(156,156,156,0.77);
	line-height: 150%;
	position:absolute;
	color:#FFFFFF;
	font-size:18px;
	transition-duration: 1s;
	overflow:hidden;}
.box:hover .overplay{
    opacity:1;
	visibility:visible;}


/*sản phẩm*/
#portfolio{
	background:#FAFAFA;
	height:1550px;
	margin-bottom: 100px;
	text-align:center;
}
#portfolio h1{
	font-size:35px;
}
.img-tab{
	width:100%;
	overflow:hidden;
}
.tab{
	position:relative;
	overflow:hidden;
}
.text-tab{
	top:0;
	opacity:0;
	visibility:hidden;
	position:absolute;
	color:#383838;
	padding:30px;
	background:rgba(255,255,255,0.75);
	width:100%;
}
.tab:hover .text-tab{
	opacity:1;
	visibility:visible;
}
.gray:hover{
	filter:grayscale(100%);
	transition-duration: 0.7s;
}
.xem{
	text-decoration:none;
	color:#505050;
	font-size:20px;
	margin-top:50px;
	border:1px solid #505050;
	padding:15px;
}
.xem:hover{
	text-decoration:underline;}

/*BACK-TO-TOP*/
.back-to-top{
	position:fixed;
	left:50px;
	bottom:50px;
	z-index: 10000;
	border:1px solid #383838;
    width:30px;
	height:30px;
	font-size:20px;
	line-height: 30px;
	text-align: center;
}
.back-to-top a{
	color:#383838;
	display: block;
}
.sticky-social{
	position: fixed;
	right:0;
	top:40%;
	display: flex;
	flex-direction: column;
}
.sticky-social a{
	padding:10px;
	background:#FFFFFF;
	color:black;
	font-size: 18px;}
/*blog*/

.clip{
	position: relative;
	width:100%;
	overflow:hidden;
	}
.video-banner{
	width:100%;
	object-fit:cover;}
.content{
	opacity:0;
	visibility:hidden;
	transition-duration: 0.7s;
	color:white;
	text-align:center;
	position:absolute;
	top:50%;
	left:50%;
	transform: translate(-50%, -50%);
	background:rgba(33,33,33,0.57);
	padding:50px 90px;}
.clip:hover .content{
	opacity: 1;
	visibility:visible;
}
.content h3{
	letter-spacing: 10px;
	font-size: 17px;}
.content h1{
	letter-spacing: 15px;
	font-size:70px;
	margin:16px 0;}
.content p{
	letter-spacing: 5px;
	font-size:13px;
	margin-bottom:44px;}
.btn{
	color:white;
	text-decoration: none;
	border: 1px solid white;
	padding:10px 40px;
	letter-spacing: 5px;
}
.btn:hower{
	background:white;
	color:black;
}
.lienhe{ text-align: center;}
.lienhe input, textarea {
  display: block;
  margin: 10px;
  padding: 10px;}
#slideshow {
   overflow: hidden;
   height: 510px;
   width: 728px;
   margin: 0 auto;
 }
.slide-wrapper {
   width: 2912px;
   -webkit-animation: slide 14s ease infinite;
 }
.slide {
   float: left;
   height: 510px;
   width: 728px;
 }
@-webkit-keyframes slide {
   20% {margin-left: 0px;}
   30% {margin-left: -728px;}
   50% {margin-left: -728px;}
   60% {margin-left: -1456px;}
   80% {margin-left: -1456px;}
 }